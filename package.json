{
	"name": "cloudhost-backend",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"dev": "cross-env NODE_ENV=development DEBUG=cloudhost:* nodemon -L --exec babel-node -- ./src/bin/www",
		"start": "cross-env NODE_ENV=production node dist/bin/www",
		"build": "rm -rf dist && babel src -s -D -d dist",
		"docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up",
		"docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
		"docker:rebuild:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml build --force-rm",
		"docker:rebuild:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml build --force-rm"
	},
	"lint-staged": {
		"src/**/*.js": [
			"prettier --write",
			"eslint --fix --quiet",
			"git add"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"dependencies": {
		"axios": "^0.18.0",
		"cookie-parser": "^1.4.3",
		"debug": "^4.1.1",
		"dotenv": "^6.2.0",
		"express": "^4.16.4",
		"morgan": "^1.9.1",
		"tmp-promise": "^1.0.5"
	},
	"devDependencies": {
		"babel-cli": "^6.26.0",
		"babel-eslint": "^10.0.1",
		"babel-plugin-module-resolver": "^3.1.1",
		"babel-preset-es2015": "^6.24.1",
		"cross-env": "^5.2.0",
		"eslint": "^5.12.0",
		"eslint-config-airbnb-base": "^13.1.0",
		"eslint-plugin-import": "^2.14.0",
		"husky": "^1.3.1",
		"lint-staged": "^8.1.0",
		"nodemon": "^1.18.9",
		"prettier": "^1.15.3"
	}
}
