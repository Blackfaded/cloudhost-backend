{
	"name": "cloudhost-backend",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"preversion": "cross-env NPM_PACKAGE_VERSION=$npm_package_version node preversion.js && git add .",
		"postversion": "git push && git push --tags",
		"docs": "jsdoc . -c ./jsdoc.json ",
		"dev": "cross-env NODE_ENV=development DEBUG=cloudhost:* nodemon -L ./bin/www",
		"start:production": "cross-env NODE_ENV=production node ./bin/www",
		"start:staging": "cross-env NODE_ENV=staging node ./bin/www",
		"docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
		"docker:staging": "docker-compose -f docker-compose.staging.yml up -d",
		"docker:dev": "docker-compose -f docker-compose.dev.yml up",
		"docker:rebuild:dev": "docker-compose -f docker-compose.dev.yml build --force-rm",
		"docker:rebuild:staging": "docker-compose -f docker-compose.staging.yml build --force-rm",
		"docker:rebuild:prod": "docker-compose -f docker-compose.prod.yml build --force-rm"
	},
	"lint-staged": {
		"src/**/*.js": [
			"prettier --write",
			"eslint --fix --quiet",
			"git add"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"dependencies": {
		"app-root-path": "^2.1.0",
		"axios": "^0.18.0",
		"body-parser": "^1.18.3",
		"cookie-parser": "^1.4.3",
		"cors": "^2.8.5",
		"custom-env": "^1.0.0",
		"debug": "^4.1.1",
		"dockerode": "^2.5.8",
		"express": "^4.16.4",
		"express-boom": "^2.0.0",
		"express-jwt": "^5.3.1",
		"express-winston": "^3.0.1",
		"jaguarjs-jsdoc": "^1.1.0",
		"js-cookie": "^2.2.0",
		"jsdoc": "^3.5.5",
		"jsonwebtoken": "^8.4.0",
		"moment": "^2.24.0",
		"morgan": "^1.9.1",
		"mysql2": "^1.6.4",
		"passport": "^0.4.0",
		"passport-jwt": "^4.0.0",
		"replace-in-file": "^4.0.0",
		"rimraf": "^2.6.3",
		"sequelize": "^4.42.0",
		"socket.io": "^2.4.0",
		"swagger-jsdoc": "^3.2.8",
		"swagger-ui-express": "^4.0.2",
		"tmp-promise": "^1.0.5",
		"umzug": "^2.2.0",
		"winston": "^3.1.0"
	},
	"devDependencies": {
		"cross-env": "^5.2.0",
		"eslint": "^5.12.0",
		"eslint-config-airbnb-base": "^13.1.0",
		"eslint-plugin-import": "^2.14.0",
		"husky": "^1.3.1",
		"lint-staged": "^8.1.0",
		"nodemon": "^1.18.9",
		"prettier": "^1.15.3"
	}
}
